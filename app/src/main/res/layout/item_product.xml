<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:card_view="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content" card_view:cardCornerRadius="8dp" card_view:cardElevation="4dp" card_view:cardUseCompatPadding="true" android:layout_margin="4dp">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="8dp">
        <!--  Ảnh sản phẩm  -->
        <ImageView android:id="@+id/imgProduct" android:layout_width="match_parent" android:layout_height="140dp" android:scaleType="centerCrop" android:contentDescription="Ảnh sản phẩm" android:src="@drawable/ic_launcher_background"/>
        <!--  Tên sản phẩm  -->
        <TextView android:id="@+id/txtProductTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Tên sản phẩm mẫu" android:textStyle="bold" android:textSize="15sp" android:maxLines="2" android:ellipsize="end" android:layout_marginTop="6dp"/>
        <!--  Giá + Sold  -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginTop="4dp" android:gravity="start|center_vertical">
            <TextView android:id="@+id/txtProductPrice" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="120.000đ" android:textColor="#E91E63" android:textStyle="bold" android:textSize="14sp"/>
            <View android:layout_width="12dp" android:layout_height="1dp"/>
            <TextView android:id="@+id/txtSold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Đã bán: 15" android:textSize="13sp" android:textColor="#888888"/>
        </LinearLayout>
        <!--  Địa chỉ  -->
        <TextView android:id="@+id/txtLocation" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Hồ Chí Minh" android:textSize="13sp" android:textColor="#666666" android:layout_marginTop="3dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>