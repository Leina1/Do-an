    <androidx.appcompat.widget.AppCompatImageButton android:id="@+id/btnAddProduct" android:layout_width="56dp" android:layout_height="56dp" android:layout_marginEnd="16dp" android:layout_marginBottom="16dp" android:src="@drawable/ic_add" android:backgroundTint="@android:color/holo_blue_light" android:elevation="6dp" android:layout_gravity="end|bottom" android:contentDescription="Add Product" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:scaleType="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>